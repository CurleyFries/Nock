<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/teamLogo"
            android:src="@drawable/archery_updated_logo"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_margin="32dp"/>

        <TextView
            android:id="@+id/teamName"
            android:text="UCLA Archery"
            android:textSize="48sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"/>
        <TextView
            android:id="@+id/teamDesc"
            android:text="UCLA's Competitive Archery team"
            android:lines="2"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/joinTeamButton"
            android:text="Join Team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"/>
        <Button
            android:id="@+id/submitScoringRoundButton"
            android:text="Submit a Scoring Round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"/>
        <Button
            android:id="@+id/leaveTeamButton"
            android:text="Leave this Team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:color/holo_red_light"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>